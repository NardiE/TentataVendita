<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageButton
        android:id="@+id/confirm_button"
        android:layout_width="139dp"
        android:layout_height="64dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="?attr/colorPrimaryDark"
        android:onClick="confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:drawable/ic_menu_send"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/textView8"
        style="@android:style/Widget.Holo.TextView"
        android:layout_width="332dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:text="Via Vittorio Veneto 15 Castelfiorentino 50051 (FI)"
        android:textColor="?attr/colorPrimary"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="82dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/saldo_text"
        style="@android:style/Widget.Holo.TextView"
        android:layout_width="494dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:text="Saldo Punti: 18"
        android:textColor="?attr/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/addebito_text"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="146dp"
        android:layout_height="61dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/colorPrimaryDark"
        android:onClick="addebito"
        android:text="â‚¬"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="234dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/textView10"
        style="@android:style/Widget.Holo.TextView"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:text="057164168"
        android:textColor="?attr/colorPrimary"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/saldo_text"
        android:layout_marginTop="67dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/addebito_text"
        android:layout_width="141dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/azione_nome_cliente"
        style="@android:style/Widget.Holo.TextView"
        android:layout_width="282dp"
        android:layout_height="41dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Antonio Rossi"
        android:textColor="?attr/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/return_button"
        android:layout_width="145dp"
        android:layout_height="61dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="returnto"
        app:srcCompat="@android:drawable/ic_menu_revert"
        android:layout_marginStart="16dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:onClick="seeEvent"
        app:layout_constraintRight_toLeftOf="@+id/confirm_button"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/return_button"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="33dp"
        android:layout_marginRight="32dp" />
</android.support.constraint.ConstraintLayout>