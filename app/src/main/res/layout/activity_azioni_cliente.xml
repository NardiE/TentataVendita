<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.example.edoardo.tentatavendita.AzioniCliente"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView4"
        style="@android:style/Widget.Holo.TextView"
        android:layout_width="282dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:text="Antonio Rossi"
        android:textColor="?attr/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        android:layout_marginTop="28dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/textView3"
        style="@android:style/Widget.Holo.TextView"
        android:layout_width="332dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:text="Via Vittorio Veneto 15 Castelfiorentino 50051 (FI)"
        android:textColor="?attr/colorPrimary"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="82dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/saldo_text"
        style="@android:style/Widget.Holo.TextView"
        android:layout_width="494dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:text="Saldo Punti: 18"
        android:textColor="?attr/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/addebito_text"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/addebito_button"
        android:layout_width="148dp"
        android:layout_height="65dp"
        android:background="?attr/colorPrimaryDark"
        android:text="â‚¬"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:onClick="addebito"
        android:layout_marginEnd="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="153dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginBottom="154dp"
        android:layout_marginRight="18dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/nome_cliente"
        style="@android:style/Widget.Holo.TextView"
        android:layout_width="215dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:text="057164168"
        android:textColor="?attr/colorPrimary"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/saldo_text"
        android:layout_marginTop="66dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="69dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/addebito_text"
        android:layout_width="141dp"
        android:layout_height="65dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/addebito_button"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <ImageButton
        android:id="@+id/return_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:onClick="returnto"
        android:background="?attr/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/confirm_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/addebito_text"
        app:layout_constraintRight_toRightOf="@+id/addebito_text"
        app:layout_constraintTop_toTopOf="@+id/confirm_button"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/confirm_button"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:onClick="returnto"
        android:background="?attr/colorPrimaryDark"
        app:srcCompat="@android:drawable/ic_menu_send"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/addebito_button"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/addebito_button"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
